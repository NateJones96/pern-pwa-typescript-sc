{
  "name": "pern-pwa-typescript-sc",
  "version": "0.1.0",
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "concurrently": "^6.0.0",
    "express": "^4.17.1",
    "pg": "^8.5.1",
